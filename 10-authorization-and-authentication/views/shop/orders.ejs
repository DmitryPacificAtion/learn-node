<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/meta.ejs') %>
    <link rel="stylesheet" href="/css/order.css" />
  </head>

  <body>
    <%- include('../layout/navigation.ejs') %> <% if (orders.length <= 0) { %>
    <main>
      <h1>Nothing there!</h1>
      <% } else { %>
      <ul class="orders">
        <% orders.forEach(order => { %>
        <li class="orders__item">
          <h1>Order - # <%= order._id %></h1>
          <ul class="orders__products">
            <% order.products.forEach(item => { %>
            <li class="orders__products-item">
              <%= item.product.title %> (<%= item.amount %>)
            </li>
            <% }); %>
          </ul>
        </li>
        <% }); %>
      </ul>
      <% } %>
    </main>
    <%- include('../layout/end-scripts.ejs') %>
  </body>
</html>
