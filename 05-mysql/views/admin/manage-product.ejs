<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/meta.ejs') %>
    <link rel="stylesheet" href="/css/product.css" />
    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <%- include('../layout/navigation.ejs') %>
    <main>
      <form
        class="product-form"
        action="/admin/<%if(editMode) { %>edit-product <% } else { %>add-product <% } %>"
        method="POST"
      >
        <div class="form-control">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            value="<% if(editMode) { %><%=product.title %><% } %>"
          />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea
            type="text"
            name="description"
            id="description"
            rows="5"
          ><% if(editMode) { %><%=product.description %><% } %></textarea>
        </div>
        <div class="form-control">
          <label for="imageUrl">Image</label>
          <input type="text" name="imageUrl" id="imageUrl" value="<% if(editMode) { %><%=product.imageUrl %><% } %>"/>
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step="0.01" value="<% if(editMode) { %><%=product.price %><% } %>"/>
        </div>
        <% if(editMode) { %>
          <input type="hidden" name="id" value=<%= product.id %> />
        <% } %>

        <button class="btn" type="submit">
          <% if(editMode) { %>Update<% } else { %>Add<% } %> Product
        </button>
      </form>
    </main>
    <%- include('../layout/end-scripts.ejs') %>
  </body>
</html>
