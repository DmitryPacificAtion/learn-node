<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/meta.ejs') %>
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../layout/navigation.ejs') %>
    <main>
      <% if (orders.length > 0) { %>
      <ul style="list-style-type: none;">
        <% orders.forEach(order => { %>
          <li>
            <h1>#<%=order.id %></h1>
            <ol>
              <% order.products.forEach(product => { %>
                <li>
                  <p>Name: <%=product.title %></p>
                  <p>Price per one: <%=product.price %></p>
                  <p>Quantity: <%=product.orderItem.quantity %></p>
                </li>
              <% }); %>
            </ol>
          </li>
          <hr /> 
        <% }) %>
        </ul>
      <% } else { %>
      <h1>There is no orders</h1>
      <% } %>
    </main>
    <%- include('../layout/end-scripts.ejs') %>
  </body>
</html>
